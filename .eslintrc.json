{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.cy.js"],
      "env": {
        "jest": true,
        "node": true,
        "cypress/globals": true
      },
      "plugins": ["jest", "cypress"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "jest/prefer-expect-assertions": "off",
        "cypress/no-unnecessary-waiting": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
